@model RegistrarViewModel

@{
    ViewBag.Title = "Registro de Usuário";
}

<style>
    .register-container {
        max-width: 400px;
        margin: 2rem auto;
    }

    .register-card {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            color: #718096;
            font-size: 0.875rem;
            display: block;
            margin-bottom: 0.5rem;
        }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        transition: border-color 0.2s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #4299e1;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
        }

    .btn-register {
        width: 100%;
        padding: 0.75rem;
        background-color: #4299e1;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .btn-register:hover {
            background-color: #3182ce;
        }

    .text-danger {
        color: #e53e3e;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .validation-summary-errors ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 1rem;
    }
</style>

<div class="register-container">
    <div class="register-card">
        <form asp-action="Registrar">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Usuario">Usuário</label>
                <input asp-for="Usuario" class="form-control" placeholder="Digite seu nome de usuário" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" class="form-control" type="password" placeholder="Digite sua senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmarSenha">Confirmar Senha</label>
                <input asp-for="ConfirmarSenha" class="form-control" type="password" placeholder="Confirme sua senha" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-register">
                <i class="bi bi-person-plus me-2"></i>
                Criar Conta
            </button>
        </form>
    </div>
</div>