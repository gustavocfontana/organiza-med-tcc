@model InserirAtividadesViewModel

@{
    ViewBag.Title = "Adicionar Atividade";
}

<div class="col">
    <div class="row gap-3 my-3 my-xl-5">
        <form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Adicionar">

            <div>
                <label class="control-label fw-semibold mb-1">Data de Início</label>
                <input type="datetime-local" class="form-control mb-1" asp-for="DataInicio" />
                <span class="text-danger fs-6" asp-validation-for="DataInicio"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Data de Término</label>
                <input type="datetime-local" class="form-control mb-1" asp-for="DataTermino" />
                <span class="text-danger fs-6" asp-validation-for="DataTermino"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Tipo de Atividade</label>
                <select class="form-control mb-1" asp-for="TipoAtividade">
                    <option value="Consulta">Consulta</option>
                    <option value="Cirurgia">Cirurgia</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="TipoAtividade"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Médico(s)</label>
                <select class="form-control mb-1" asp-for="MedicoId" multiple>
                    @if (Model.Medicos != null)
                    {
                        @foreach (var medico in Model.Medicos)
                        {
                            <option value="@medico.Id">@medico.Nome</option>
                        }
                    }
                </select>
                <span class="text-danger fs-6" asp-validation-for="MedicoId"></span>
            </div>

            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-outline-primary px-5" asp-action="Listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>