@model DetalhesAtividadesViewModel

@{
    ViewBag.Title = "Detalhes da Atividade";
}

<div class="col">
    <partial name="_Informacoes" model="Model"></partial>

    <h3>Médicos Envolvidos:</h3>
    <ul>
        @foreach (var medico in Model.MedicosEnvolvidos)
        {
            <li>@medico.Nome (@medico.Especialidade)</li>
        }
    </ul>

    <a asp-action="Listar" class="btn btn-outline-primary px-5 mt-5">
        <i class="bi bi-arrow-return-left me-1"></i>
        Voltar
    </a>
</div>