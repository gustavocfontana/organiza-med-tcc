@using Microsoft.AspNetCore.Mvc.TagHelpers
@using OrganizaMed.Dominio.Atividades
@model EditarAtividadesViewModel

@{
    ViewBag.Title = "Atualizar Atividade";
}

<div class="col">
    <div class="row gap-3 my-3 my-xl-5">
        <form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Atualizar">

            <div class="form-group">
                <label asp-for="TipoAtividade" class="control-label"></label>
                <select asp-for="TipoAtividade" class="form-control">
                    @foreach (object ? tipo in Enum.GetValues(typeof(TipoAtividade)))
                    {
                        <option value="@tipo">@tipo</option>
                    }
                </select>
                <span asp-validation-for="TipoAtividade" class="text-danger"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Data de Inicio</label>
                <input class="form-control mb-1" asp-for="DataInicio"/>
                <span class="text-danger fs-6" asp-validation-for="DataInicio"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Data de Termino</label>
                <input class="form-control mb-1" asp-for="DataFim"/>
                <span class="text-danger fs-6" asp-validation-for="DataFim"></span>
            </div>

            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-outline-primary px-5" href="/Atividades/Listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>