@model IEnumerable<ListarMedicosViewModel>

@{
    ViewBag.Title = "Listar Médicos";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" asp-controller="Medicos" asp-action="Adicionar">
        <i class="bi bi-circle-add"></i>
        Inserir novo Medico
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var medicoVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="custom-card-font-color p-0">@medicoVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a title="Detalhes"
                           class="text-info-emphasis fs-5 custom-card-font-color"
                           href="/Medicos/Detalhes/@medicoVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a title="Atualizar"
                           class="text-info-emphasis fs-5 custom-card-font-color"
                           href="/Medicos/Atualizar/@medicoVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a title="Excluir"
                           class="text-info-emphasis fs-5 custom-card-font-color" href="/Medicos/Excluir/@medicoVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <h5 class="card-title custom-card-font-color">@medicoVm.Nome</h5>
                </div>

                <div class="card-body">
                    <h5 class="card-title custom-card-font-color">@medicoVm.Crm</h5>
                </div>

                <div class="card-body">
                    <h5 class="card-title custom-card-font-color">@medicoVm.Especialidade</h5>
                </div>
            </div>
        }
    </div>
</div>