
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    MensagemViewModel ? mensagem = ViewBag.Mensagem ?? null;
    string theme = CookieHelper.GetCookie(Context, "theme") ?? "light";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - OrganizaMed</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
</head>
<body class="@(theme == "dark" ? "dark-mode" : "")">
    <header class="header @(theme == "dark" ? "header-dark-mode" : "")">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 @(theme == "dark" ? "navbar-dark-mode" : "")">
            <div class="container">
                <a class="navbar-brand fw-semibold fs-4" asp-controller="Home" asp-action="Index">OrganizaMed</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Início</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Medicos" asp-action="Listar">Medicos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Atividades" asp-action="Listar">Atividades</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Medicos" asp-action="TopTrabalhadores">Ranking</a>
                        </li>

                    </ul>
                </div>

                <li class="nav-item">
                    <button id="theme-toggle" class="btn btn-outline-dark">@(theme == "dark" ? "Modo Claro" : "Modo Noturno")</button>
                </li>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <h1 class="fw-semibold mt-4">@ViewBag.Title</h1>
            <hr>
            <partial name="_Mensagem" model="mensagem"></partial>

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OrganizaMed
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var themeToggle = document.getElementById("theme-toggle");
            themeToggle.addEventListener("click", function() {
                var isDarkMode = document.body.classList.toggle("dark-mode");
                var theme = isDarkMode ? "dark" : "light";
                document.cookie = "theme=" + theme + "; path=/";
                themeToggle.textContent = isDarkMode ? "Modo Claro" : "Modo Noturno";
            });

            // Set initial button text based on theme
            var isDarkMode = document.body.classList.contains("dark-mode");
            themeToggle.textContent = isDarkMode ? "Modo Claro" : "Modo Noturno";
        });
    </script>
</body>
</html>